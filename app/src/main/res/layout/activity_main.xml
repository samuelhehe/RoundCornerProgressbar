<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Start" />

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="0dp"
            android:text="66"
            android:cursorVisible="true"
            android:textColor="@android:color/background_dark"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:inputType="number"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Set" />


    </LinearLayout>

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_00"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:padding="0.5dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#50D4F0"
        app:pro_radius="1dp"
        app:pro_showtxt="false" />

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_01"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginBottom="10dp"
        android:padding="1dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#84cc61"
        app:pro_radius="5dp"
        app:pro_showtxt="false" />

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_02"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#84cc61"
        app:pro_radius="2dp"
        app:pro_showtxt="false" />

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_03"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#60c371"
        app:pro_radius="2dp"
        app:pro_showtxt="true"
        app:pro_text_color="@android:color/background_light"
        app:pro_text_size="12sp" />

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_04"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#FED02C"
        app:pro_radius="2dp"
        app:pro_showtxt="true"
        app:pro_text_color="@android:color/background_light"
        app:pro_text_size="13sp" />

    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_05"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#ffb72b"
        app:pro_radius="3dp"
        app:pro_showtxt="true"
        app:pro_text_color="@android:color/background_light"
        app:pro_text_size="14sp" />


    <cn.samuelnotes.roundcornerprogressbar.view.ProgressView
        android:id="@+id/progress_view_06"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        app:pro_bg_color="#e0e5e5"
        app:pro_pro_color="#ff7d56"
        app:pro_radius="5dp"
        app:pro_showtxt="false"
        app:pro_text_color="@android:color/background_light"
        app:pro_text_size="14sp" />


</LinearLayout>
